<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Theme.App" parent="android:Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textViewStyle">@style/Widget.TextView</item>
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="android:imageButtonStyle">@style/Widget.ImageButton</item>
        <item name="android:listViewStyle">@style/Widget.ListView</item>
    </style>

    <style name="Theme.Dialog" parent="Theme.App">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Widget.TextView" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
    </style>
    
    <style name="Widget.Button" parent="android:Widget.Button">
        <item name="android:padding">@dimen/middle_padding</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="android:textColor">@color/colorActionBarLight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="Widget.Action.Button" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorActionBarLight</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.ImageButton" parent="android:Widget.ImageButton">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.ListView" parent="android:Widget.ListView">
        <item name="android:divider">@drawable/divider_padding_both</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="TextAppearance.Title" parent="Widget.TextView">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorTextPrimaryInv</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Primary" parent="Widget.TextView">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.Secondary" parent="Widget.TextView">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

</resources>